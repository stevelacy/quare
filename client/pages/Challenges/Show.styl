@require './mixins/colors'
@require './mixins/icons'

.modal
  header.bar
    background-color transparent

    .title
      color #fff
    a.icon
      color #fff

  .content
    background-color teal

    .content-padded
      background-color teal
      color #fff
      text-align center

      i.icon
        color #fff
        font-size 30vw
        margin-top 60px

      h3
        color #fff
        font-size 2em
        margin-top 1em
        font-weight normal

      textarea.styled
        border-radius 10px
        border 4px solid #fff
        background-color teal
        padding 10px

.challenge
  .intro
    background-color teal
    height 200px
    position relative
    .intro-overlay
      background-color rgba(255,255,255,0.2)
      overflow auto
      position absolute
      bottom 0
      width 100%
      padding 10px
      color #fff
      font-weight bold
    .intro-duration
      float right

.action-panel
  position relative
  overflow auto
  padding 1em
  .action-block
    float left
    width 33%
    text-align center
    border-left 1px solid #000
    font-size: 0.8em
    &:first-child
      border-left-width 0
    .icon
      color: teal
      display block
      font-size 3em
      margin-bottom .2em

.photos
  img
    width 33%

.tip
  border-bottom: 1px solid #e7e7e7;
  padding: 1em

  .location
    color: teal
    location-icon()

#map
  height 200px
  width 100%
