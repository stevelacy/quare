@require 'nib'
@require '../../css/mixins/background'
@require '../../css/mixins/aligns'
@require '../../css/mixins/trans'
@import '../../css/imports/colors'

.main
  &.items
    full-background('/img/bliss1.jpg')
    center()
    .item
      center()
      padding 2%
      background whiteShade
      box-shadow 0 0 5px grey
      margin 5%
      max-width 80%
      img
        max-width 100%
    .new
      .plus
        trans-all(0.2)
        center()
        trans-background(250, 250, 250, .5)
        width 60px
        height 60px
        margin 20px
        font-size 80px
        line-height 60px
        color grey
        border-radius 3px
        box-shadow 0 0 3px grey
        cursor pointer
        &.open
          trans-background(250, 250, 250, .2)
          line-height 0
          width 50%
          .url
            center()
            trans-background(250, 250, 250, .2)
            font-size 30px
            width 100%
            height 100%
            padding 5px
            border none


