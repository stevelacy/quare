@require './mixins/flex'
@require './mixins/fonts'
@require './mixins/colors'

.intro-page
  height 100%

  .slider
    height 100%

    .slide-group
      height 100%

      .slide > div
        width 100vw
        height 100%
        text-align center
        color #fff
        background-color grey
        background-image url(/img/ripple_bg.png)
        background-position bottom center
        background-repeat no-repeat
        font-size 1.3em

        h2
          font-weight normal
          margin 20px 0

        p
          margin 0 20vw
          color #fff
          word-wrap normal
          white-space normal

        i.icon
          margin-top 1em
          font-size 30vw
          color teal

        div.actions
          padding 1.5em

          span.btn
            font-size 1.5em
