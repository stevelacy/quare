@require 'nib'
@require '../../css/mixins/background'
@require '../../css/mixins/aligns'
@require '../../css/mixins/trans'
@import '../../css/imports/colors'

.main
  &.profile
    .background
      fixed left top
      z-index -1
      min-height 100%
      min-width 100%
      //filter blur(10px)
    .shadow
      fixed top left
      width 100%
      height 100%
      //background rgba(250, 250, 250, .2)
      background: linear-gradient(to bottom, rgba(0, 0, 0, 0),  rgba(50, 50, 50, .8) 50%, rgba(50, 50, 50, .9) 70%);
      z-index -1

    .user-box
      center()
      color white
      margin-top 20vh
      width 50%
      margin-left 25%
      .image
        img
          trans-all(0.3)
          box-shadow 0 0 10px rgba(100, 100, 100, .5)
          &:hover
            box-shadow 0 0 20px rgba(100, 100, 100, .3)
      .info
        width 80%
        margin 10%
        padding 5%
        color white

