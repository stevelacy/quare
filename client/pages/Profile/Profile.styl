@require 'nib'
@require '../../css/mixins/background'
@require '../../css/mixins/aligns'
@require '../../css/mixins/trans'
@import '../../css/imports/colors'

.main
  &.profile
    .background
      background black
      fixed left -10px top 5px
      z-index -1
      min-height 100%
      min-width 100%
      filter blur(10px)
    .shadow
      fixed top left
      width 100%
      height 100%
      background rgba(250, 250, 250, .2)
      z-index -1

    .user-box
      center()
      color white
      margin-top 10vh
      width 50%
      margin-left 25%
      .image
        img
          trans-all(0.3)
          box-shadow 0 0 10px rgba(100, 100, 100, .5)
          &:hover
            box-shadow 0 0 20px rgba(100, 100, 100, .3)
